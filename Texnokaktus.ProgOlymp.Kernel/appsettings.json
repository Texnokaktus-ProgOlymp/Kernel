{
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "Microsoft.Hosting.Lifetime": "Information"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "{Timestamp:HH:mm:ss.fff K} [{Level:u3}] <{SourceContext}> {Message:lj} {NewLine}{Exception}"
                }
            }
        ],
        "Enrich": [
            "FromLogContext",
            "WithThreadId",
            "WithExceptionDetails",
            "WithEnvironmentName",
            "WithAssemblyName",
            "WithMachineName"
        ]
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "DefaultDb": "data source=raspberrypi.local;initial catalog=OlympKernel;User Id=sa;Password=Raspberry-Pi;Encrypt=True;TrustServerCertificate=True",
        "DefaultRabbitMQ": "amqp://guest:guest@raspberrypi.local"
    },
    "JobSettings": {
        "ApplicationTransactionProcessor": {
            "Schedule": "0 * * * * ?"
        }
    },
    "SmtpSettings": {
        "Server": {
            "Host": "smtp.gmail.com",
            "Port": 587
        },
        "Sender": {
            "Email": "olimp_inf_pr@cttit.ru",
            "Name": "Олимпиада по информатике и программированию"
        }
    }
}
